  <script>
  document.addEventListener("DOMContentLoaded", async () => {
    /* ===============================
       âœ… ë¡œê·¸ì¸ ìœ ì € í™•ì¸
    =============================== */
    const userData = JSON.parse(localStorage.getItem("user"));
    const params = new URLSearchParams(window.location.search);
    const postId = params.get("id");

    if (!userData) {
      alert("ë¡œê·¸ì¸ì´ í•„ìš”í•©ë‹ˆë‹¤.");
      window.location.href = "index.html";
      return;
    }

    /* ===============================
       âœ… ë“œë¡­ë‹¤ìš´ ë©”ë‰´ ì œì–´
    =============================== */
    const btn = document.getElementById("mypage-btn");
    const menu = document.getElementById("mypage-menu");

    // ê´€ë¦¬ìì¼ ê²½ìš° MY PAGE ë²„íŠ¼ ìˆ¨ê¹€
    if (userData.role === "admin") {
      btn.style.display = "none";
    }

    // í´ë¦­ ì‹œ toggle
    btn.addEventListener("click", (e) => {
      e.stopPropagation();
      menu.classList.toggle("show");
    });

    // ì™¸ë¶€ í´ë¦­ ì‹œ ë‹«ê¸°
    document.addEventListener("click", (e) => {
      if (!menu.contains(e.target) && !btn.contains(e.target)) {
        menu.classList.remove("show");
      }
    });

    /* ===============================
       âœ… ê²Œì‹œê¸€ ë°ì´í„° ë¡œë“œ
    =============================== */
    try {
      const res = await fetch(`http://192.168.75.102:3000/api/post/${postId}`);
      const post = await res.json();

      document.getElementById("post-title").textContent = post.title;
      document.getElementById("post-author").textContent = `ì‘ì„±ì: ${post.author}`;
      document.getElementById("post-date").textContent =
        `ì‘ì„±ì¼: ${new Date(post.createdAt).toLocaleDateString()}`;
      document.getElementById("error-content").textContent =
        post.errorContent || "(ë‚´ìš© ì—†ìŒ)";
      document.getElementById("solution-content").textContent =
        post.solutionContent || "(ë‚´ìš© ì—†ìŒ)";
      document.getElementById("up-count").textContent = post.likes || 0;
      document.getElementById("down-count").textContent = post.dislikes || 0;

      const list = document.getElementById("commentList");
      list.innerHTML = "";
      if (post.comments && post.comments.length > 0) {
        post.comments.forEach(c => {
          const div = document.createElement("div");
          div.classList.add("comment-item");
          div.innerHTML = `<strong>${c.authorId}</strong><p>${c.content}</p>`;
          list.appendChild(div);
        });
      } else {
        list.innerHTML = "<p>ì•„ì§ ëŒ“ê¸€ì´ ì—†ìŠµë‹ˆë‹¤.</p>";
      }
    } catch (err) {
      console.error("âŒ ê²Œì‹œê¸€ ë¶ˆëŸ¬ì˜¤ê¸° ì‹¤íŒ¨:", err);
      alert("ê²Œì‹œê¸€ì„ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
    }

    /* ===============================
       âœ… ëŒ“ê¸€ ì¶”ê°€
    =============================== */
    document.getElementById("btn-comment").addEventListener("click", async () => {
      const input = document.getElementById("commentInput");
      const text = input.value.trim();
      if (!text) return alert("ëŒ“ê¸€ì„ ì…ë ¥í•˜ì„¸ìš”.");

      const res = await fetch(`http://192.168.75.102:3000/api/posts/${postId}/comment`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          authorId: userData.userId, // âœ… userIdë¡œ ì €ì¥
          content: text
        })
      });

      const data = await res.json();
      if (data.success) location.reload();
      else alert("ëŒ“ê¸€ ë“±ë¡ ì‹¤íŒ¨");
    });
  });
  </script>
